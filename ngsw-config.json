{
    "$schema": "./node_modules/@angular/service-worker/config/schema.json",
    "index": "/index.html",
    "assetGroups": [
        {
            "name": "app",
            "installMode": "prefetch",
            "resources": {
                "files": [
                    "/favicon.ico",
                    "/index.html",
                    "/manifest.webmanifest",
                    "/*.css",
                    "/*.js"
                ]
            }
        },
        {
            "name": "assets",
            "installMode": "lazy",
            "updateMode": "prefetch",
            "resources": {
                "files": [
                    "/assets/**",
                    "/*.(eot|svg|cur|jpg|png|webp|gif|otf|ttf|woff|woff2|ani)"
                ]
            }
        }
    ],
    "dataGroups": [
        {
            "name": "api-unicorns",
            "urls": [
                "http://localhost:3000/unicorns/*"
            ],
            "cacheConfig": {
                "strategy": "performance",
                "maxAge": "3600",
                "maxSize": 100
            }
        },
        {
            "name": "api-capacities",
            "urls": [
                "http://localhost:3000/capacities"

            ],
            "cacheConfig": {
                "strategy": "freshness",
                "maxAge": "3600",
                "maxSize": 1,
                "timeout": "400"
            }
        }
    ]
}
